{
	"name": "Basic-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "webpack serve --config config/webpack.dev.js --mode development",
		"build": "webpack --config config/webpack.prod.js --mode production",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"prettier": "prettier --write .",
		"postcss": "postcss src/index.styles.scss -o dist/css/styles.css",
		"watch:postcss": "postcss src/index.styles.scss -o dist/css/styles.css --watch",
		"husky": "husky install",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:fix && npm run prettier && npm run postcss"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AndreyShyshkin/Boilerplate/edit/Basic-boilerplate.git"
	},
	"author": "AdreyShyshkin",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/AndreyShyshkin/Boilerplate/edit/Basic-boilerplate/issues"
	},
	"homepage": "https://github.com/AndreyShyshkin/Boilerplate/edit/Basic-boilerplate",
	"dependencies": {
		"jquery": "^3.6.3",
		"tailwindcss": "^3.2.7"
	},
	"devDependencies": {
		"@babel/core": "^7.21.0",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"autoprefixer": "^10.4.13",
		"babel-loader": "^9.1.2",
		"css-loader": "^6.7.3",
		"eslint": "^8.35.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.3",
		"image-webpack-loader": "^8.1.0",
		"mini-css-extract-plugin": "^2.7.2",
		"path": "^0.12.7",
		"postcss": "^8.4.21",
		"postcss-loader": "^7.0.2",
		"prettier": "^2.8.4",
		"sass": "^1.58.3",
		"sass-loader": "^13.2.0",
		"style-loader": "^3.3.1",
		"tailwindcss": "^3.0.5",
		"terser-webpack-plugin": "^5.3.6",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.11.1",
		"webpack-merge": "^5.8.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,css,scss,json}": [
			"eslint",
			"prettier --write"
		]
	},
	"browserslist": [
		"last 2 versions",
		"> 1%",
		"not ie <= 11"
	]
}
