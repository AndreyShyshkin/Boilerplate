{
	"name": "Basic-boilerplate",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"start": "webpack serve --config config/webpack.dev.js --mode development",
		"build": "webpack --config config/webpack.prod.js --mode production",
		"lint": "eslint src",
		"lint:all": "eslint .",
		"lint:fix": "eslint src --fix",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"postcss:build": "postcss src/index.styles.scss -o dist/app/css/styles.css --config postcss.config.js",
		"postcss:watch": "postcss src/index.styles.scss -o dist/app/css/styles.css --watch --no-map",
		"pre-commit:lint": "npm run lint:fix",
		"pre-commit:format": "npm run format",
		"pre-commit:postcss": "npm run postcss:build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:fix && npm run prettier && npm run postcss:build"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AndreyShyshkin/Boilerplate/tree/Basic-boilerplate.git"
	},
	"author": "AdreyShyshkin",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/AndreyShyshkin/Boilerplate/edit/Basic-boilerplate/issues"
	},
	"homepage": "https://github.com/AndreyShyshkin/Boilerplate/edit/Basic-boilerplate",
	"dependencies": {
		"jquery": "^3.6.3"
	},
	"devDependencies": {
		"@babel/core": "^7.16.7",
		"@babel/preset-env": "^7.16.5",
		"@babel/preset-react": "^7.16.7",
		"autoprefixer": "^10.4.2",
		"babel-loader": "^8.2.3",
		"babel-plugin-transform-runtime": "^6.23.0",
		"cache-loader": "^4.1.0",
		"clean-webpack-plugin": "^4.0.0",
		"css-loader": "^6.5.1",
		"css-minimizer-webpack-plugin": "^4.2.2",
		"eslint": "^8.9.0",
		"eslint-config-airbnb": "^19.0.3",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"file-loader": "^6.2.0",
		"hard-source-webpack-plugin": "^0.13.1",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^7.0.4",
		"image-webpack-loader": "^8.0.4",
		"imagemin-webpack-plugin": "^2.4.2",
		"mini-css-extract-plugin": "^2.4.3",
		"postcss": "^8.4.5",
		"postcss-loader": "^6.2.1",
		"prettier": "^2.4.1",
		"sass": "^1.42.1",
		"sass-loader": "^12.4.0",
		"style-loader": "^3.3.1",
		"tailwindcss": "^3.0.5",
		"terser-webpack-plugin": "^5.3.6",
		"webpack": "^5.65.0",
		"webpack-bundle-analyzer": "^4.8.0",
		"webpack-cli": "^4.9.1",
		"webpack-dev-server": "^4.6.0",
		"webpack-merge": "^5.8.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,css,scss,json}": [
			"eslint",
			"prettier --write"
		]
	},
	"browserslist": [
		"last 2 versions",
		"> 1%",
		"not dead"
	]
}
